            android:visibility="invisible"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPlaca"
            android:text="GZM21B"
            android:visibility="invisible"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignStart="@+id/textViewColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMarca"
            android:text="MAZDA"
            android:visibility="invisible"
            android:layout_above="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewColor"
            android:text="ROJO"
            android:visibility="invisible"
            android:layout_above="@+id/textView8"
            android:layout_toEndOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewModelo"
            android:text="2015"
            android:visibility="invisible"
            android:layout_alignTop="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRevision"
            android:text="2015-06-11T22:35:41"
            android:visibility="invisible"
            android:layout_alignTop="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOAT (Vencimiento):"
            android:id="@+id/textView12"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/textView11"
            android:layout_alignStart="@+id/textView11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSOAT"
            android:text="2015-06-11T22:35:41"
            android:visibility="invisible"
            android:layout_alignTop="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

    </RelativeLayout>
</LinearLayout>